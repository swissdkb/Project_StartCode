<Page
    x:Class="StoreHelloWorld.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StoreHelloWorld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox x:Name="textBoxShowHello" HorizontalAlignment="Center" Margin="0,112,0,0" Text="" VerticalAlignment="Top" Width="282"/>
        <Button x:Name="buttonSayHello" Content="Click Me" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,175,0,0" Width="282" Click="ButtonSayHello_Click"/>

    </Grid>
</Page>
